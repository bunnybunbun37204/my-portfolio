---
// src/components/ExperienceCard.astro
const { title, company, date, items } = Astro.props;
---

<div class="group relative pl-6 border-l-2 border-gray-300 dark:border-gray-600 hover:border-gray-400 dark:hover:border-gray-400 transition-colors">
  <div class="absolute w-3 h-3 bg-gray-300 dark:bg-gray-600 rounded-full -left-[7px] top-0 group-hover:bg-gray-400 dark:group-hover:bg-gray-400"></div>
  
  <div class="space-y-2">
    <div class="flex justify-between items-start flex-wrap gap-2">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
        <p class="text-gray-600 dark:text-gray-400">{company}</p>
      </div>
      <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">{date}</span>
    </div>
    
    <ul class="space-y-1.5">
      {items.map((item: unknown) => (
        <li class="flex items-start">
          <span class="i-lucide-check-circle-2 text-gray-600 dark:text-gray-400 mr-2 mt-1 text-sm"></span>
          <span class="text-gray-700 dark:text-gray-300">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</div>