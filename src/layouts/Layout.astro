---
// src/layouts/BaseLayout.astro
import '../styles/global.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth dark:bg-gray-950">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <body class="font-inter antialiased bg-white dark:bg-gray-950 transition-colors duration-200">
    <nav class="sticky top-0 bg-white/90 dark:bg-gray-950/90 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800 z-50 print:hidden">
      <div class="max-w-4xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="font-semibold text-gray-900 dark:text-gray-100 hover:text-gray-600 dark:hover:text-gray-300">
            BUNYAWAT NAUNNAK
          </a>
          <div class="flex items-center space-x-4">
            <button onclick="window.print()" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100">
              <span class="i-lucide-printer mr-1"></span>
              Print
            </button>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-gray-200 dark:border-gray-800 mt-12 print:hidden">
      <div class="max-w-4xl mx-auto px-4 py-6">
        <p class="text-center text-gray-600 dark:text-gray-400 text-sm">
          Â© {new Date().getFullYear()} Bunyawat Naunnak
        </p>
      </div>
    </footer>
  </body>
</html>